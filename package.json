{
  "name": "wrap-it",
  "displayName": "Wrap It",
  "description": "\"Wrap It\" - Easily wrap code in your chosen HTML tags for enhanced markup.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wrap-it.quickWrap",
        "title": "Quick Wrap"
      },
      {
        "command": "wrap-it.selectedWrap",
        "title": "Selected Element Wrap"
      },
      {
        "command": "wrap-it.fragmentWrap",
        "title": "Wrap with React Fragment"
      }
    ],
    "keybindings": [
      {
        "command": "wrap-it.quickWrap",
        "key": "alt+w",
        "mac": "alt+w",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "WrapIt configuration",
      "properties": {
        "wrap-it.defaultTag": {
          "type": "string",
          "default": "span",
          "description": "The default HTML tag to insert when using WrapIt."
        },
        "wrap-it.autoSelectTag": {
          "type": "boolean",
          "default": true,
          "description": "Automatically select the opening tag after wrapping.(only applies to quickWrap)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "ts-loader": "^9.4.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.4"
  }
}